{
    //--------------------------------------------------------------
	//     NOTE: ONLY EDIT CODE IN /public/* - NOT IN /build/*
	//--------------------------------------------------------------
    "version": "1.0.0",
    "manifest_version": 2,

    "short_name": "Duplicate Client Merger",
    "name": "RIPS Extension - Duplicate Client Merger",

    "description": "RIPS Extension - Enables automatic duplicate client record merging. Checks for mismatching data, asks user to select correct data, then merges!",

    "permissions": [
        "tabs"
    ],
    "options_page": "index.html", // react app here
    "browser_action": {
        "default_icon": {
            "48": "extension_code/img/Icon-48.png"
        },
        "default_popup": "extension_code/html/optionsPageRedirect.html"
    },

    "icons": {
        "48": "extension_code/img/Icon-48.png",
    	"96": "extension_code/img/Icon-96.png"
    },
    "background": {
		"page": "extension_code/html/background.html"
    },
    "content_scripts": [
        {	// Shared functions!
			"matches": [ "http://rips.247lib.com/Stars/*" ],
			"js": [
                "extension_code/js/shared/portCodes.js",
                "extension_code/js/shared/Utils.js",

                // "extension_code/js/shared/FieldTranslator.js",
                "extension_code/js/shared/ripsFieldKeys.js"
                // "extension_code/js/shared/ripsPageKeys.js"
                // TODO: evaluate if old scripts are needed
                // "extension_code/js/content_scripts/min/jquery-3.1.1.min.js",
			]
        },

        {   // "Other" RIPS pages
            "matches": [ "http://rips.247lib.com/Stars/*" ],
            "exclude_matches": [
                "http://rips.247lib.com/Stars/User/Login",
                "http://rips.247lib.com/Stars/ClientDetails/ClientDetails",
                "http://rips.247lib.com/Stars/Addresses/Addresses",
                "http://rips.247lib.com/Stars/ClientDetails/ClientNotes",
                "http://rips.247lib.com/Stars/Relatives/Relatives",
                "http://rips.247lib.com/Stars/Contacts/Contacts",
                "http://rips.247lib.com/Stars/MatterAction/ActionHistoryList",
                "http://rips.247lib.com/Stars/SearchClientDetails/AdvancedSearch",
				"http://rips.247lib.com/Stars/SearchClientDetails/ClientListSearchResult"
            ],
            "js": [ "extension_code/js/content_scripts/Redirect/Ctrl.js" ]
        },
        
        // {}, Registration page
		{	// Client Basic Information page
			"matches": [ "http://rips.247lib.com/Stars/ClientDetails/ClientDetails" ],
			"js": [
                "extension_code/js/content_scripts/ClientBasicInformation/Ctrl.js",
                "extension_code/js/content_scripts/ClientBasicInformation/FIDs.js"
            ]
        },
        {   // Addresses page
            "matches": [ "http://rips.247lib.com/Stars/Addresses/Addresses" ],
            "js": [
                "extension_code/js/content_scripts/Addresses/Ctrl.js",
                "extension_code/js/content_scripts/Addresses/FIDs.js"
            ]
        },
        {   // Notes page
            "matches": [ "http://rips.247lib.com/Stars/ClientDetails/ClientNotes" ],
            "js": [ 
                "extension_code/js/content_scripts/Notes/Ctrl.js",
                "extension_code/js/content_scripts/Notes/FIDs.js"
            ]
        },
        // // {}, Aliases page (skipping for v1)
        {   // Relatives page
            "matches": [ "http://rips.247lib.com/Stars/Relatives/Relatives" ],
            "js": [
                "extension_code/js/content_scripts/Relatives/Ctrl.js",
                "extension_code/js/content_scripts/Relatives/FIDs.js"
            ]
        },
        {   // Contacts page
            "matches": [ "http://rips.247lib.com/Stars/Contacts/Contacts" ],
            "js": [
                "extension_code/js/content_scripts/Contacts/Ctrl.js",
                "extension_code/js/content_scripts/Contacts/FIDs.js"
            ]
        },
        // {   // Files page
        //     "matches": [ "http://rips.247lib.com/Stars/FilesUpload/FilesUpload" ],
        //     "js": [ "" ]
        // },
        // {}, Private Files page (not going to import - maybe add a warning)
		// {}, Services pages
		// {}, Add Action page
		{	// History page
			"matches": [ "http://rips.247lib.com/Stars/MatterAction/ActionHistoryList" ],
			"js": [
                "extension_code/js/content_scripts/History/Ctrl.js",
                "extension_code/js/content_scripts/History/FIDs.js"
            ]
		},
		{	// Advanced Search
			"matches": [ "http://rips.247lib.com/Stars/SearchClientDetails/AdvancedSearch" ],
			"js": [
                "extension_code/js/content_scripts/AdvancedSearch/Ctrl.js",
                "extension_code/js/content_scripts/AdvancedSearch/FIDs.js"
            ]
        },
        {	// Advanced Search Results
			"matches": [ "http://rips.247lib.com/Stars/SearchClientDetails/ClientListSearchResult" ],
            "js": [
                "extension_code/js/content_scripts/AdvancedSearchResults/Ctrl.js",
                "extension_code/js/content_scripts/AdvancedSearchResults/FIDs.js"
            ]
        }
	]
}
